{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": false,
    "outDir": "./dist",
    "alwaysStrict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "src/**/*",
    "types/*"
  ],
}